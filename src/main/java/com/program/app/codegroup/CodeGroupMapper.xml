<mapper namespace="com.program.app.codegroup.CodeGroupMapper">

	<resultMap type="com.program.app.codegroup.CodeGroup" id="resultMapObj"></resultMap>
 
 	<select id="selectList" resultMap="resultMapObj">
 		select
 			*
 		from
 			codegroup
 			where
 			nameFull like concat('%',#{shKeyword},'%')
 			<!-- 문자 검색은 대부분 like를 사용 -->
 	
 	
 	</select>
 	
 		<select id="selectOne" resultMap="resultMapObj">
 		select
 			seq,
 			nameFull
 		from
 			codegroup
 		where
 			seq = #{seq}
 			<!-- 문자 검색은 대부분 like를 사용 -->
 	
 	
 	</select>
 
 
 </mapper>
